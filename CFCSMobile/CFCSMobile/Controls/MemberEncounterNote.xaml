<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:local="clr-namespace:CFCSMobile.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HorizontalOptions="FillAndExpand"
    x:Class="CFCSMobile.Controls.MemberEncounterNote" 
    x:Name="theGrid"
    >
    <Grid.RowDefinitions>
        <RowDefinition Height="20"/>
        <RowDefinition Height="20"/>
        <RowDefinition Height="12"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <local:LabledDateControl x:Name="ContactType" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                             TitleText="Contact Type:" TitleFontSize="10" ValueFontSize="12"></local:LabledDateControl>
    <local:LabledDateControl x:Name="Author" Grid.Row="0" Grid.Column="2" TitleText="Author:" 
                             TitleFontSize="10" ValueFontSize="12"></local:LabledDateControl>

    <local:LabledDateControl x:Name="CreateDate" Grid.Row="1" Grid.Column="0" TitleText="Created:" 
                             TitleFontSize="10" ValueFontSize="12"></local:LabledDateControl>
    <local:LabledDateControl x:Name="ContactDate" Grid.Row="1" Grid.Column="2" TitleText="Contact:" 
                             TitleFontSize="10" ValueFontSize="12"></local:LabledDateControl>

    <local:LabledDateControl x:Name="LBL" Grid.Row="2" Grid.Column="0" TitleText="Note Detail:" 
                             TitleFontSize="10" ValueFontSize="12"></local:LabledDateControl>

    <Editor x:Name="NarrativeShort" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
            InputTransparent="True" AutoSize="TextChanges" Margin="4,0,4,4"></Editor>

